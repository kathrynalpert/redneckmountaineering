html, body, div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, abbr, address, cite, code, del, dfn, em, img, ins, kbd, q, samp, small, strong, sub, sup, var, b, i, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, figure, footer, header, hgroup, menu, nav, section, menu, time, mark, audio, video {
    background: none repeat scroll 0 0 transparent;
    border: 0 none;
    font-size: 100%;
    margin: 0;
    outline: 0 none;
    padding: 0;
    vertical-align: baseline;
}
* {
    margin: 0;
    padding: 0;
}
body {
    background: none repeat scroll 0 0 #FFFFFF;
    color: #333333;
    font-family: "minion-pro-1","minion-pro-2","Times New Roman",serif;
    font-size: 13px;
    font-weight: 400;
    margin: 0;
    padding: 0;
}

a {text-decoration: none;color:#000000; letter-spacing:0.1em;}
a:visited{text-decoration: none; color:#000000;}
a:hover{color:#8a8a8a;}

h1,h2,h3{font-size:16px;text-transform:uppercase;color:#000;font-weight:normal;letter-spacing:0.1em;line-height:1.3em;}
h3{margin-bottom:23px}
strong{text-transform:uppercase;font-weight:normal;letter-spacing:0.1em;font-size:90%}
h1#logo{float:left;display:block;position:relative;width:100%;height:13px;text-align:center;}
h1#logo a {text-decoration: none;color:#000000;font-size:30px;letter-spacing:0.5em;}
h1#logo a:visited{color:#000000;}
h1#logo a:hover{color:#8a8a8a;}
header#header {
    border-top: 4px solid #000000;
    clear: both;
    float: left;
    position: relative;
    width: 100%;
    height: 200px;
}
nav {
    clear: both;
    float: left;
    font-size: 12px;
    letter-spacing: 0.1em;
    margin-bottom: 88px;
    margin-top: 30px;
    width: 100%;
}
#menu ul{float:right;}
#menu ul li{float:left;margin:0 10px;}
#menu ul li.first{list-style:none;}
#menu ul li a{font-size:12px;text-transform:uppercase;color:#000000;font-weight:normal;letter-spacing:0.1em;line-height:1.3em;}
#menu ul li a:hover{color:#8a8a8a;}

#page_container{width:900px; margin:0 auto;}
#page img#top {width:870px; height:330px;margin-bottom:30px;}
#page p#phrase{
    display: block;
    font-size: 15px;
    font-weight: 400;
    letter-spacing: 1px;
    line-height: 1.5;
    margin: 0 auto 30px;
    text-align: center;
    width: 730px;
    text-transform:uppercase;
}

hr.divide{width:250px;margin: 0 auto;color:#9F9F9F;background-color:#9F9F9F;height:1px;border:none;}

#body_content_title{display:none;}
#body_content_left{margin-bottom:20px;}

section#blog_posts{margin-top:40px;}
.blog_post a {font-weight: bold;}
.blog_post section.details{color:#9F9F9F;text-transform:uppercase;font-size:8px;}
.blog_post section p{margin-bottom:10px;}
.blog_post footer{text-align:left;margin:0 0 20px 0;}
.blog_post .comment_count{color:#9F9F9F;text-transform:uppercase;font-size:8px;}

.inner h2{margin:10px 0 0 0;}
ul#blog_posts {list-style:circle inside none;}
ul#blog_posts li{margin:2px 10px;}
a#rss_feed_subscribe{text-transform:lowercase;color:#8a8a8a;}
a#rss_feed_subscribe:hover{color:orange;}

footer{text-align:center;margin:40px;font-size: 0.8em;letter-spacing: 3px;text-transform:uppercase;}
